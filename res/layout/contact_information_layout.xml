<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/person_background"
    >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
        <Button
	        android:id="@+id/back"
	        android:layout_width="50dp"
	        android:layout_height="40dp"
	        android:background="@drawable/back"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:width="50dp" />
	    <TextView
	        android:textColor="#FFFFFF"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:textSize="24sp"
	        android:layout_weight="1"
	        android:layout_marginLeft="20dp"
	        android:gravity="center"
	        />  
	    <Button
	        android:id="@+id/more"
	        android:layout_width="50dp"
	        android:layout_height="40dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="10dp"
	        android:width="50dp" 
	        android:hint="更多"
	        android:textSize="24sp"
	        android:layout_marginRight="10dp"
	        android:background="@drawable/more_normal"
	        />
        
    </LinearLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:background="#e0000000"
            >
            
            <ImageView 
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/default_personal_image"
                android:layout_gravity="center"
                android:id="@+id/head_image"
                />
            
            <TextView 
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/remark"
                android:hint="贲睿"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                
                <ImageView 
                    android:src="@drawable/user_name"
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"
                    android:id="@+id/user_name"
                    android:gravity="center|left"
                    android:hint="m13814545863@163.com"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#FFFFFF"
                    />
                
            </LinearLayout>
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/reader_item_divider" 
                />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                
                <ImageView 
                    android:src="@drawable/dynamic_state"
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"
                    android:id="@+id/dynamic_state"
                    android:hint="贲睿的空间"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#FFFFFF"
                    />
                
            </LinearLayout>
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/reader_item_divider" 
                />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                
                <ImageView 
                    android:src="@drawable/email"
                    android:layout_marginLeft="20dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    />
                
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center|left"
                    android:layout_marginLeft="30dp"
                    android:textSize="20sp"
                    android:id="@+id/email"
                    android:hint="m13814545863@163.com"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#FFFFFF"
                    />
                
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/reader_item_divider" 
                />
            
        </LinearLayout>
        
    </ScrollView>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#e0000000"
        >
        
        <Button 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_message"
            android:text="发消息"
            android:background="@drawable/login_button"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            />
        
    </LinearLayout>
    
</LinearLayout>
