<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        
        <TextView
                android:id="@+id/receive_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09-06 10:19"
                android:textColor="#ff888271"
                android:layout_gravity="center_vertical|right"
                android:textSize="12.0sp" />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            
            <ImageView 
	            android:id="@+id/receiver_head_image"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_marginRight="5dp"
	            android:src="@drawable/default_personal_image"
	            />
	        
            <RelativeLayout 
                android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
                >
                
                <TextView 
		            android:id="@+id/receiver_message_content"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text=""
		            android:textSize="20sp"
		            android:background="@drawable/balloon_left"
		            android:clickable="true"
		            android:textIsSelectable="true"
		            android:editable="false"
		            />
                
                <ImageView 
                    android:id="@+id/receiver_message_content_image_view"
                    android:layout_width="150dip"
                    android:layout_height="150dip"
                    android:background="@drawable/balloon_left"
		            android:clickable="true"
		            android:text=""
		            android:textSize="20sp"
		            android:gravity="start"
		            android:scaleType="centerInside"
		            android:layout_marginRight="40dp"
                    />
                
            </RelativeLayout>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/send_fail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/send_message_fail" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start"
            android:orientation="vertical" >
            
            <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            >
	            
	            <ImageView
	                android:id="@+id/is_read"
	                android:layout_width="wrap_content"
	                android:layout_height="30dp"
	                android:src="@drawable/not_read" />
	            
	            <TextView
	                android:id="@+id/get_message_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="09-06 10:19"
	                android:textColor="#ff888271"
	                android:layout_gravity="center_vertical"
	                android:textSize="12.0sp" />
	            
	        </LinearLayout>
            
            <LinearLayout 
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                
                <RelativeLayout 
                    android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
                    >
                    
                    <TextView
		                android:id="@+id/send_message_content"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="start"
		                android:layout_weight="1"
		                android:background="@drawable/balloon_right"
		                android:text=""
		                android:textIsSelectable="true"
		                android:clickable="true"
		                android:editable="false"
		                android:textSize="20sp" />
                    
                    <ImageView 
	                    android:id="@+id/send_message_content_image_view"
	                    android:layout_width="150dip"
	                    android:layout_height="150dip"
	                    android:background="@drawable/balloon_right"
			            android:clickable="true"
			            android:text=""
			            android:textSize="20sp"
			            android:gravity="start"
			            android:scaleType="centerInside"
			            android:layout_marginLeft="40dp"
	                    />
                    
                </RelativeLayout>
                
            </LinearLayout>
            
        </LinearLayout>

        <ImageView
            android:id="@+id/my_head_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/default_personal_image" />

    </LinearLayout>
    
</LinearLayout>
